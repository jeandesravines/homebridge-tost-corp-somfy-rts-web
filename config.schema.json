{
  "pluginAlias": "TOSTCorpSomfyRTSWeb",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "required": true,
        "minLength": 1,
        "title": "Device ID",
        "description": "TOST Corp device's ID"
      },
      "devices": {
        "type": "array",
        "title": "Devices list",
        "description": "TOST Corp device's to customize",
        "items": {
          "type": "object",
          "properties": {
            "topic": {
              "type": "string",
              "required": true,
              "title": "Topic"
            },
            "duration": {
              "type": "number",
              "title": "Duration (in milliseconds)"
            }
          }
        }
      },
      "excluded": {
        "type": "array",
        "title": "Devices list",
        "description": "TOST Corp device's topics to exclude",
        "items": {
          "type": "string"
        }
      }
    }
  },
  "layout": [
    "id",
    "devices",
    "excluded"
  ]
}