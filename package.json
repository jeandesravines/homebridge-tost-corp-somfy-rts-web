{
  "name": "@jdes/homebridge-tost-corp-somfy-rts-web",
  "description": "A Homebridge plugin to easily control your Somfy blinds using the TOST Corp box for Somfy RTS",
  "version": "1.0.17",
  "repository": "https://github.com/jeandesravines/homebridge-tost-corp-somfy-rts-web.git",
  "license": "MIT",
  "author": "Jean Desravines <hi@jeandesravines.com>",
  "main": "dist/src/index.js",
  "keywords": [
    "homebridge-plugin",
    "homekit",
    "rts",
    "somfy",
    "tost-corp"
  ],
  "funding": {
    "type": "paypal",
    "url": "https://paypal.me/jeandesravines0"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "lint": "eslint --fix --ext .ts src tests",
    "prepare": "husky install",
    "preversion": "npm run lint",
    "version": "git add -A .",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "engines": {
    "homebridge": ">=1.3.0"
  },
  "files": [
    "dist/src/**/*",
    "config.schema.json"
  ],
  "dependencies": {
    "axios": "^0.24.0",
    "cancelable-promise": "^4.2.1",
    "homebridge": "^1.3.8",
    "jsdom": "^19.0.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/jsdom": "^16.2.13",
    "@types/lodash": "^4.14.177",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-extended": "^1.1.0",
    "lint-staged": "^12.1.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.3.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run test --bail --findRelatedTests"
    ]
  }
}
